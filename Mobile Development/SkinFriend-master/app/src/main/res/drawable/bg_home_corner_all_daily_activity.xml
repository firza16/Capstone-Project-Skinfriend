<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50121212"/> <!-- Warna shadow (hitam transparan) -->
            <corners android:radius="10dp"/> <!-- Sudut shadow -->
        </shape>
    </item>
    <!-- Background -->
    <item android:bottom="4dp" android:left="1dp" android:right="1dp" android:top="1dp" >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Warna latar belakang -->
            <corners android:radius="10dp"/> <!-- Sudut latar belakang -->
        </shape>
    </item>
</layer-list>

