<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_result_recommendation"
    android:paddingBottom="8dp">


    <LinearLayout
        android:id="@+id/sc_cont_effect"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sc_img">

        <TextView
            android:id="@+id/sc_effect_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_favorite_corner_all"
            android:backgroundTint="@color/onSurface"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="No-Whitecast"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/sc_effect_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_favorite_corner_all"
            android:backgroundTint="@color/onSurface"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="No-Whitecast"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/sc_effect_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_favorite_corner_all"
            android:backgroundTint="@color/onSurface"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="No-Whitecast"
            android:textColor="@color/white"
            android:textSize="10sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/sc_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:maxLines="2"
        android:text="Nama SkinCare"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sc_img"
        app:layout_constraintTop_toTopOf="@+id/sc_img" />

    <TextView
        android:id="@+id/sc_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="HargaSkinCare"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sc_img"
        app:layout_constraintStart_toEndOf="@+id/sc_img"
        app:layout_constraintTop_toBottomOf="@+id/sc_name" />

    <ImageView
        android:id="@+id/sc_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_place_holder" />

    <ImageView
        android:id="@+id/sc_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_favorite_corner_all_outline"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sc_buy"
        app:srcCompat="@drawable/icon_outline_favorite" />

    <ImageView
        android:id="@+id/sc_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_favorite_corner_all_outline"
        android:padding="4dp"
        android:tint="@color/primary_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_outline_add" />
</androidx.constraintlayout.widget.ConstraintLayout>